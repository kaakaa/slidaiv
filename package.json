{
  "name": "demo-webpack",
  "displayName": "demo-webpack",
  "description": "",
  "version": "0.0.1",
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "vscode": "^1.89.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "demo-webpack.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Slidaiv",
      "properties": {
        "slidaiv.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "slidaiv.baseUrl": {
          "type": ["string", "null"],
          "default": "https://api.openai.com/v1",
          "description": "OpenAI Base URL (default: https://api.openai.com/v1). Enter this if you use OpenAI Compatible API."
        },
        "slidaiv.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model name"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "demo-webpack.helloWorld",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "preinstall": "./install-slidev.sh",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "mock-server": "prism mock -d ./e2e/mock-openai.yaml"
  },
  "devDependencies": {
    "@slidev/parser": "link:slidev/packages/parser",
    "@slidev/types": "link:slidev/packages/types",
    "@stoplight/prism-cli": "^5.8.1",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "compile": "^0.0.2",
    "js-yaml": "^4.1.0",
    "openai": "^4.47.1"
  }
}
